---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import logo from '@/assets/images/logo-nardini.png';

const links = [
  { label: 'Sobre', href: '#sobre' },
  { label: 'Servicos', href: '#servicos' },
  { label: 'Diferenciais', href: '#diferenciais' },
  { label: 'FAQ', href: '#faq' },
  { label: 'Contato', href: '#contato' },
];

const socials = [
  { icon: 'lucide:instagram', label: 'Siga Nardini Seguros no Instagram', href: '#' },
  { icon: 'lucide:facebook', label: 'Curta Nardini Seguros no Facebook', href: '#' },
  { icon: 'lucide:message-circle', label: 'Fale com Nardini Seguros pelo WhatsApp', href: 'https://wa.me/5519991371808' },
];

const currentYear = new Date().getFullYear();
---

<footer class="relative bg-primary text-primary-foreground py-16" role="contentinfo" itemscope itemtype="https://schema.org/WPFooter">
  <!-- Top gradient border -->
  <div class="absolute top-0 left-0 right-0 h-1" style="background: linear-gradient(90deg, hsl(116 52% 32%) 0%, hsl(116 52% 32% / 0.3) 50%, transparent 100%);"></div>

  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8 mb-10">
      <!-- Brand -->
      <div>
        <div class="mb-4">
          <Image src={logo} alt="Logo Nardini Seguros - Corretora de Seguros em Americana SP" class="h-10 w-auto brightness-0 invert" width={160} height={40} />
        </div>
        <p class="text-primary-foreground/60 text-sm leading-relaxed">
          Corretora de Seguros, Protecao Veicular e Rastreamento em Americana/SP. Atendimento 24h humanizado.
        </p>
      </div>

      <!-- Links -->
      <nav aria-label="Links do rodape">
        <h4 class="font-display font-bold mb-4">Links Rapidos</h4>
        <ul class="space-y-2.5">
          {links.map((l) => (
            <li>
              <a href={l.href} class="relative text-primary-foreground/60 hover:text-secondary text-sm transition-colors group">
                {l.label}
                <span class="absolute -bottom-0.5 left-0 h-px w-0 bg-secondary transition-all duration-300 group-hover:w-full"></span>
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Contact -->
      <div>
        <h4 class="font-display font-bold mb-4">Contato</h4>
        <address class="not-italic space-y-2">
          <p class="text-primary-foreground/60 text-sm">
            <a href="tel:+551936214061" class="hover:text-secondary transition-colors" aria-label="Ligar para Nardini Seguros: (19) 3621-4061">(19) 3621-4061</a>
          </p>
          <p class="text-primary-foreground/60 text-sm">
            <a href="tel:+5519991371808" class="hover:text-secondary transition-colors" aria-label="Ligar para Nardini Seguros WhatsApp: (19) 99137-1808">(19) 99137-1808</a>
          </p>
          <p class="text-primary-foreground/60 text-sm mt-1">
            <a href="mailto:atendimento.americanasp@gmail.com" class="hover:text-secondary transition-colors" aria-label="Enviar email para Nardini Seguros">atendimento.americanasp@gmail.com</a>
          </p>
          <p class="text-primary-foreground/60 text-sm mt-2">Americana, SP - Brasil</p>
        </address>
      </div>

      <!-- Social -->
      <div>
        <h4 class="font-display font-bold mb-4">Redes Sociais</h4>
        <div class="flex gap-3">
          {socials.map((s) => (
            <a
              href={s.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={s.label}
              class="w-10 h-10 rounded-lg bg-white/10 hover:bg-secondary/20 flex items-center justify-center transition-all duration-200 hover:scale-105"
            >
              <Icon name={s.icon} class="h-5 w-5 text-primary-foreground/70 hover:text-secondary" />
            </a>
          ))}
        </div>
      </div>
    </div>

    <div class="border-t border-white/10 pt-6 text-center">
      <p class="text-primary-foreground/40 text-xs">&copy; {currentYear} Nardini Seguros e Protecao Veicular. Todos os direitos reservados. CNPJ: Em registro.</p>
    </div>
  </div>
</footer>
